<div class="grid-container">
  <div class="grid-x grid-padding-x grid-padding-y">
    <div class="large-12 cell forum-title">
      <h2 class="text-center">Web Developer Forum</h2>
    </div>
    <div class="large-12 cell breadcrumbs-wrap">
      <nav aria-label="You are here:" role="navigation">
        <ul class="breadcrumbs">
          <li><a href="/">Home</a></li>
          <li>
            <span class="show-for-sr">Current: </span>
            Welcome to the Forum
          </li>
        </ul>
      </nav>
    </div>

    <div class="large-3 medium-4 cell have-we-met">
      {{> login-status}}
    </div>
    <div class="large-9 medium-8 cell posts-wrap">

      <!-- Posts panel container -->
      <div class="posts-panel">

        <!-- Panel's header -->
        <header class="panel-header">
          <h2 class="panel-title">Welcome to the Forum</h2>
        </header>

        <!-- Panel's content -->
        <div class="panel-content">

          {{!-- All posts go here {{#each posts as |post|}}{{/each}} --}}

          <!-- Sample post content -->
          {{#each posts as |post|}}
          <div class="post-item">
            {{!-- <a href="#" class="post-thumbnail">
              <img src="https://static.pexels.com/photos/370018/pexels-photo-370018.jpeg" alt="" />
            </a> --}}
            <div class="post-text">
              <a href="/viewpost/{{id}}">
                <h3 class="post-title">{{post.title}}</h3>
              </a>
              <div class="post-meta">
                <span class="meta"><span class="meta-icon fa fa-user-circle-o" aria-hidden="true"></span><a
                    class="meta-text">{{username}}</a></span>
                {{!-- <span class="meta"><span class="meta-icon fa fa-clock-o" aria-hidden="true"></span><span
                    class="meta-text">22/06/2030</span></span> --}}
              </div>
              <div class="post-summary">
                <p>{{post.post_text}}
                  <a href="#" class="post-read-more">Read more<span class="fa fa-chevron-circle-right"
                      aria-hidden="true"></span></a>
                </p>
              </div>
            </div>
          </div>
          {{/each}}

          {{> comment-section}}
          

          {{!-- <script src="./js/profile.js"></script> What is this?  It doesn't go anywhere and can't find the JS file. --}}

        </div>
      </div>
    </div>
  </div>
</div>
<div class="grid-x grid-padding-x grid-padding-y footer">
  <div class="large-12 medium-12 cell">
    <ul class="menu">
      <li class="hide-for-small-only border-right"><a href="/">Home</a></li>
      <li class="hide-for-small-only border-right"><a href="login">Log in</a></li>
      <li class="hide-for-small-only border-right"><a href="signup">Sign up</a></li>
      <li class="hide-for-small-only"><a href="/">&copy;2022 Collective Cup,
          Inc.</a></li>
    </ul>
  </div>
</div>

