{{#each comments as |comment|}}
<div class="post-item comment">
  <div class="comment-text">
    <h6 class="comment-title">{{user.username}} says:</h6>
    <div class="comment-summary">
      <p>{{comment.comment_text}}
      </p>
    </div>
  </div>
</div>
{{/each}}
{{post_id}}


{{#if logged_in}}
<form class="create-comment" id="create-comment">
  <label>
    Comment
    <textarea id='commentText' name='commentText' rows='5' cols='30' placeholder="Write something..">{{comment_text}}</textarea>
  </label>
  {{!-- <label>
    Name
    <textarea id='commentName' name='commentName' rows='1'>{{user_id}}</textarea>
  </label> --}}

  <input type="submit" class="button orange expanded post-form" value="Create Comment" style="width:100%;"></input>
</form>
{{else}}
Please <a href="/login">Log in</a> to make comments. 
{{/if}}

<script src="/assets/js/createcomment.js"></script>