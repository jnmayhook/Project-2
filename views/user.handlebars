{{> login-status-header}}

{{> hero-section}}

<div class="grid-container">
   <div class="grid-x grid-padding-x grid-padding-y">
      <div class="large-12 cell forum-title">
         <h2 class="text-center">Web Developer Forum</h2>
      </div>
      <div class="large-12 cell breadcrumbs-wrap">
         <nav aria-label="You are here:" role="navigation">
            <ul class="breadcrumbs">
               <li><a href="/">Forum Home</a></li>
               <li>
                  <span class="show-for-sr">Current: </span> My Posts
               </li>
            </ul>
         </nav>
      </div>
      <div class="large-3 medium-4 cell have-we-met">
         {{> login-status}}
      </div>
      <div class="large-9 medium-8 cell mt-neg-40 posts-wrap">

         <div class="posts-panel">
            <header class="panel-header">
               <h2 class="panel-title">Profile - My Posts</h2>
            </header>
            <div class="panel-content">
               {{#each posts as |post|}}
               <div class="post-item">
                  <div class="post-text">
                     <a href="/viewpost/{{id}}">
                        <h3 class="post-title">{{post.title}}</h3>
                     </a>
                     <div class="post-meta">
                        <span class="meta"><a class="meta-text">{{user.username}}</a></span>
                     </div>
                     <div class="post-summary">
                        <p>{{post.post_text}}</p>
                        <a href="/viewpost/{{id}}" class="post-read-more">Read more</a>
                     </div>
                  </div>
                  <form>
                     <a href="/editpost/{{id}}"><input type="click" class="button orange expanded post-form"
                           value="Edit Post"></input></a>
                  </form>
               </div>
               {{/each}}
            </div>
         </div>
      </div>
   </div>
</div>

<div class="grid-x grid-padding-x grid-padding-y footer">
   <div class="large-12 medium-12 cell">
      <ul class="menu">
         <li class="hide-for-small-only border-right"><a href="/index">Home</a></li>
         <li class="hide-for-small-only border-right"><a href="/login">Log in</a></li>
         <li class="hide-for-small-only border-right"><a href="/signup">Sign up</a></li>
         <li><a href="/">&copy;2022 Collective Cup, Inc.</a></li>
      </ul>
   </div>
</div>

<script src="/assets/js/editpost.js"></script>